
<% if notice %>
    <div class = "alert alert-success"><%= notice %> </div>
<% end %>
<% if alert %>
    <div class = "alert"><%= alert %> </div>
<% end  %> 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
  setTimeout(function() {
    $('.alert').fadeOut('fast');
  }, 3000); // <-- time in milliseconds
</script>
