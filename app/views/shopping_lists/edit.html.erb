
<h1> <%= @list.name %> </h1>
<%= path = String('/families/' + String(@family.id) + '/shopping_lists/' + String(@list.id) + '/add_item/') %>
<%= puts(path) %>
<%if @items_enum != []%>
    <h2>
        Items to add to the shopping list!
    </h2>
    <ul>
        <%@items_enum.each do |item|%>
            <li>
                <% currentPath = path + String(item.id) %>
                <% puts("DUUDDEEE:" + currentPath) %>
                 <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick=`something(<%=path%>)`>
                   <%= item.name %>
                </button>
               
            </li>   
        <%end%>
    </ul>

   

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <%= form_tag('', :class => "add-item") do %>
                        <div class="modal-body" style = "color: blue;">
                            <input type="number" placeholder = "quantity">
                            <input type="text" placeholder = "unit">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <%# <button type="button" class="btn btn-primary">Save changes</button> %>
                            <button type="submit" >Add</button>
                        </div>
                    <% end %>
                </div>
        </div>
    </div>
<%end%>