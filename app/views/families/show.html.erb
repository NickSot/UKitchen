<div class = "row">
	<div class = "col-12">
	<h1> <%= @family.name %> </h1>
	</div>

	<h2>
		Current budget: <%= @family.budget %>
	</h2>


	<div class= "col-12">
		<div class = "row">
				<%@members.each do |m|%>
					<div class = "col-10"><%=link_to m.username, '/users/' + String(m.id)%></div>

					<%if m.id != current_user.id %>
						<div class = "col"> <%= link_to "Kick", family_kick_path(@family.id, m.id) %> </div>
					<% end %>
				<%end%>
		</div>
	</div>

	<div class = "col-12">
		<h2> Shopping lists </h2>
		<% if @family.shopping_lists != [] %>
			<ul>
				<%@family.shopping_lists.each do |sl|%>
					<li>
						<%=link_to sl.name, "/families/" + String(@family.id) + "/shopping_lists/" + String(sl.id)%>
					</li>
				<%end%>	
			</ul>
		<% else %>
			<h4> No shopping lists yet!</h4>
		<% end %>
	</div>
	<br>
	
	<div class = "col-12">
		<h2> Current stock </h2>
		<% if @items != [] %>
			<ul>
				<%@items.each do |item|%>
					<li>
						<p> <%= item.items_enum.name %> - <%= item.quantity %> <%= item.quantity_unit %></p>
					</li>
				<%end%>	
			</ul>
		<% else %>
			<h4> No items yet!</h4>
		<% end %>
	</div>

	<div class = "col-12">
		<%=link_to 'Add members', add_members_path( String(@family.id) ) %><br>

		<%=link_to 'Add shopping list', '/families/' + String(@family.id) + '/shopping_lists/new'%> <br>

		<%=link_to 'Change the family name', '/families/edit/' + String(@family.id)%> <br>

		<%=link_to 'Edit the family budget', '/families/edit_budget/' + String(@family.id)%> <br>
	<div class = "col-12">
</div>